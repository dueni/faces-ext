<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
        <resource-library-contracts>
        	<!-- resource-library-contracts configuration works only with the new xml namespaces! -->
            <contract-mapping>
                <url-pattern>/base/*</url-pattern>
                <contracts>base</contracts>
            </contract-mapping>
            <contract-mapping>
                <url-pattern>/user/*</url-pattern>
                <contracts>blue,base</contracts>
            </contract-mapping>
            <contract-mapping>
                <url-pattern>*</url-pattern>
                <contracts>red,base</contracts>
            </contract-mapping>
        </resource-library-contracts>
    </application>
    <factory>
    	<faces-context-factory>ch.dueni.contracts.context.ContractsFacesContextFactory</faces-context-factory>
    </factory>
</faces-config>
